

<h1><%= t('category.categories') %></h1>

<% if @categories.present? %>
    <%= render 'list' %>
<% else %>
    <div class="alert alert-info">
      <%=t('no_category_found')%>
    </div>
<% end %>

<div class="row">
  <div class="col-sm-10">
    <%= will_paginate @categories if @categories.present? %>
  </div>
  <div class="col-sm-2">
    <%= link_to 'New Category', new_category_path, class: "btn btn-info" if user_signed_in? %>
  </div>
</div>

