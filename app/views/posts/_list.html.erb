<table class="table table-bordered">
  <thead>
  <tr>
    <th><%=t('Title')%></th>
    <th><%=t('published_by')%></th>
    <th><%=t('published_on')%></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td class="col-sm-3"><%= post.user.email %> </td>
        <td class="col-sm-2"><%= post.created_at %></td>
        <td class="col-sm-3">
          <center>
            <%= link_to t('Show'), post, class: "btn btn-default" %>
            <%= link_to t('Edit'), edit_post_path(post), class: "btn btn-primary" if user_signed_in? %>
            <%= link_to t('Destroy'), post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" if user_signed_in? %>
          </center>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>