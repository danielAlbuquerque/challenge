<legend> Posts </legend>


<% if @posts.present? %>
    <%= render 'list' %>
<% else %>
    <div class="alert alert-info">
      No posts found
    </div>
<% end %>

<br>

<div class="row">
  <div class="col-sm-10">
    <%= will_paginate @posts if @posts.present? %>
  </div>
  <div class="col-sm-2">
    <%= link_to 'New post', new_post_path, class: "btn btn-info" if user_signed_in?%>
  </div>
</div>
